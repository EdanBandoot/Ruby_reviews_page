<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <!-- Header Section -->
      <div class="text-center mb-5">
        <h1 class="display-4 text-primary fw-bold">Database ERD</h1>
        <p class="lead text-muted">Visual representation of the data structure and relationships</p>
      </div>

      <!-- Datasets Card -->
      <div class="card shadow-lg mb-5">
        <div class="card-header bg-primary text-white">
          <h2 class="h4 mb-0"><i class="bi bi-database me-2"></i>Datasets Used</h2>
        </div>
        <div class="card-body">
          <!-- Faker Gem -->
          <div class="dataset-section mb-4 p-3 bg-light rounded">
            <h3 class="h5 text-primary">
              <span class="badge bg-primary me-2">1</span>
              Faker Gem
            </h3>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <strong>Structure:</strong> Programmatically generated product/review data
              </li>
              <li class="list-group-item">
                <strong>Tables:</strong> <span class="badge bg-info">Products</span>, <span class="badge bg-info">Reviews</span>
              </li>
              <li class="list-group-item">
                <strong>Fields:</strong> Product names, descriptions, prices, review comments
              </li>
            </ul>
          </div>

          <!-- satisfaction.csv -->
          <div class="dataset-section mb-4 p-3 bg-light rounded">
            <h3 class="h5 text-success">
              <span class="badge bg-success me-2">2</span>
              satisfaction.csv
            </h3>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <strong>Structure:</strong> Static CSV with satisfaction levels
              </li>
              <li class="list-group-item">
                <strong>Tables:</strong> <span class="badge bg-info">Satisfactions</span>
              </li>
              <li class="list-group-item">
                <strong>Fields:</strong> Pre-defined satisfaction levels
              </li>
            </ul>
          </div>

          <!-- importance.csv -->
          <div class="dataset-section p-3 bg-light rounded">
            <h3 class="h5 text-warning">
              <span class="badge bg-warning me-2">3</span>
              importance.csv
            </h3>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <strong>Structure:</strong> Static CSV with importance levels
              </li>
              <li class="list-group-item">
                <strong>Tables:</strong> <span class="badge bg-info">Importances</span>
              </li>
              <li class="list-group-item">
                <strong>Fields:</strong> Pre-defined importance levels
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- ERD Diagram Card -->
      <div class="card shadow-lg">
        <div class="card-header bg-success text-white">
          <h2 class="h4 mb-0"><i class="bi bi-diagram-3 me-2"></i>Entity Relationship Diagram</h2>
        </div>
        <div class="card-body text-center p-4">
          <div class="erd-image-container bg-white p-3 rounded border">
            <%= image_tag "product_reviews_erd.jpg",
                  alt: "Product Reviews ERD",
                  class: "img-fluid shadow rounded",
                  style: "max-height: 600px; width: auto;" %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>