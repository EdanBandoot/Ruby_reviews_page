<div class="container">
  <h1><%= @product.name %></h1>

  <div class="row">
    <div class="col-md-6">
      <p><strong>Description:</strong> <%= @product.description %></p>
      <p><strong>Price:</strong> $<%= number_with_precision(@product.price, precision: 2) %></p>
      <p><strong>Category:</strong> <%= @product.category %></p>
    </div>

    <div class="col-md-6">
      <h2>Reviews</h2>
      <% if @reviews.any? %>
        <div class="list-group">
          <% @reviews.each do |review| %>
            <div class="list-group-item">
              <p><strong>Satisfaction:</strong> <%= review.satisfaction.level %></p>
              <p><strong>Importance:</strong> <%= review.importance.level %></p>
              <p><%= review.comments %></p>
              <%= link_to "View Review", review_path(review), class: "btn btn-sm btn-outline-primary" %>
            </div>
          <% end %>
        </div>
        <%= paginate @reviews %>
      <% else %>
        <p>No reviews yet for this product.</p>
      <% end %>
    </div>
  </div>

  <%= link_to "Back to Products", products_path, class: "btn btn-secondary" %>
</div>